<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Animation for dialog box -->
    <style name="AppTheme.DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AppTheme.DialogAnimation</item>
    </style>
    <style name="AppTheme.DialogAnimation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
    <style name="AppTheme.BaseBackground">
        <item name="android:background">@color/primaryColor</item>
    </style>
    <style name="AppTheme.FloatingActionButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/primaryDarkColor</item>
    </style>
    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@color/errorColor</item>
    </style>
    <style name="DefaultExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="errorTextAppearance">@color/errorColor</item>
    </style>
    <style name="DefaultButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/primaryDarkColor</item>
    </style>
    <style name="AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
</resources>
