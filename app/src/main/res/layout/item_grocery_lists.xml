<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="groceryList"
                type="de.jl.groceriesmanager.database.groceryList.GroceryList"/>
        <variable name="clickListener" type="de.jl.groceriesmanager.grocery_lists.GroceryListsItemListener"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onClick(groceryList)}">
        <TextView
                android:text="@{groceryList.description}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/groceryListName"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:text="Grocery List Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:textSize="36sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>