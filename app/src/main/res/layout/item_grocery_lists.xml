<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
                name="groceryList"
                type="de.jl.groceriesmanager.database.groceryLists.GroceryList"/>
        <variable name="clickListener" type="de.jl.groceriesmanager.grocery_lists.GroceryListsItemListener"/>
    </data>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:background="@drawable/bg_dialog" app:cardBackgroundColor="@color/primaryLightColor"
            android:onClick="@{() -> clickListener.onClick(groceryList)}">

    <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:text="@{groceryList.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/groceryListName"
                android:hint="@string/common_grocery_list"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/itemCount"
                android:layout_marginRight="8dp"/>
        <View
                android:id="@+id/titleDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/primaryDarkColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/groceryListName"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemCount"
                android:hint="20/22"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/groceryListName"
                app:layout_constraintTop_toTopOf="@+id/groceryListName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>