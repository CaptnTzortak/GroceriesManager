<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="addProductViewModel"
                  type="de.jl.groceriesmanager.product.add.AddProductViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="321dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/common_item_description"
                        android:id="@+id/TIET_Description"
                        android:text="@={addProductViewModel.description}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/expiryDateBtn" android:layout_weight="1"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TIL_Description"
                    app:layout_constraintEnd_toEndOf="@+id/TIL_Description"
            />
            <Button
                    android:text="@string/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_confirm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:enabled="@{addProductViewModel.productItemValid}"
                    android:onClick="@{() -> addProductViewModel.onConfirmItem()}"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TIET_Expiry_Date"/>
            <EditText
                    android:hint="@string/common_expiry_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:enabled="false"
                    android:ems="10"
                    android:text="@={addProductViewModel.expiryDateString}"
                    android:id="@+id/TIET_Expiry_Date" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/TIL_Description"
                    app:layout_constraintStart_toStartOf="@+id/TIL_Description"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/expiryDateBtn"
                    android:layout_marginRight="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>