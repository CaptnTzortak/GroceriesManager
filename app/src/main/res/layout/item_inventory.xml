<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="inventoryProduct"
                type="de.jl.groceriesmanager.database.inventory.Inventory"/>
        <variable name="clickListener" type="de.jl.groceriesmanager.inventory.InventoryItemListener"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onClick(inventoryProduct)}" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <TextView
                app:itemDescription="@{inventoryProduct}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/groceryListName"
                app:layout_constraintTop_toTopOf="@+id/itemImage" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:text="main description"
                app:layout_constraintStart_toEndOf="@+id/itemImage" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/itemImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                app:itemBarcode="@{inventoryProduct}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/barcode"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/groceryListName"
                app:layout_constraintStart_toEndOf="@+id/itemImage" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"/>
        <TextView
                app:productExpiryDate="@{inventoryProduct}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/expiryDate"
                android:textSize="12sp"
                android:text="@string/common_expiry_date" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/itemImage" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/barcode"/>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/expiryDate" android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>